
TELEGRAM_BOT_TOKEN=put-your-bot-token-here
TZ=Europe/Moscow
PUSH_HOUR=9
PUSH_MINUTE=30
FEED_LIMIT=8

# Ranking weights — профильные темы > LLM > фидбек > база
PROFILE_WEIGHT=0.8
LLM_WEIGHT=0.6
FEEDBACK_WEIGHT=0.2
BASE_WEIGHT=0.05

# Diversity (quota-based, round-robin across profile topics)
DIVERSITY_ENABLED=1
DIVERSITY_TOP_K=4
DIVERSITY_MIN_PER_TOPIC=1
DIVERSITY_MAX_SHARE=0.5

# LLM API
OPENAI_API_KEY=put-your-openai-key-here
LLM_MODEL=gpt-4o-mini

# LLM enrichment performance
LLM_BATCH_LIMIT=150
LLM_CONCURRENCY=12
LLM_WINDOW_HOURS=48

# Audio news (TTS)
OPENAI_TTS_MODEL=tts-1              # or gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy
AUDIO_DIR=/app/media/audio

# Smart topic normalization
TOPIC_EMB_MODEL=text-embedding-3-small
TOPIC_SIM_THRESHOLD=0.82
TOPIC_LLM_DISAMBIG=1
TOPIC_ALIAS_MAX=5000

# Logging
LOG_LEVEL=info           # error|warn|info|debug
LOG_FORMAT=json          # json|pretty
#LOG_FILE=/app/newslens.log
